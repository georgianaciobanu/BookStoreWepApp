@model IEnumerable<BookVM>

@{ ViewData["Title"] = "Home Page";
                var detailsRoute = "/Details/{0}"; }

<div class="row">

    @foreach (var book in Model) {
<div class="col-4">
    <div class="card mb-4">

        <div class="card-header">
            <h4 class="my-0 font-weight-normal">
                <label style="font-size:23px; color:steelblue;">@book.Name</label>
            </h4>
        </div>

        <img class="card-img-top" style="height:100%" src="~/@book.ImagePath" alt="no image" />

        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <label style="font-size:20px; color:#a51313"><b>$@book.Price</b></label>
                </div>
                <a href="@string.Format(detailsRoute, book.Id)" class="btn pull-right btn-outline-info">View Details</a>
            </div>
        </div>

    </div>
</div>}

</div>